{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "#FFF",
          "style": "plain",
          "template": "# ",
          "type": "root"
        },
        {
          "style": "plain",
          "template": "{{ .UserName }}@{{ .HostName }} ",
          "type": "session"
        },
        {
          "foreground": "#FFF",
          "properties": {
            "branch_icon": "",
            "fetch_upstream_icon": false
          },
          "style": "plain",
          "template": "{{ .HEAD }} ",
          "type": "git"
        },
        {
          "foreground": "#FFF",
          "properties": {
            "style": "agnoster_short"
          },
          "style": "plain",
          "template": "{{ .PWD }} ",
          "type": "path"
        },
        {
          "foreground": "#FFF",
          "foreground_templates": [
            "{{ if gt .Code 0 }}#E84855{{ end }}"
          ],
          "properties": {
            "always_enabled": true
          },
          "style": "plain",
          "template": "% ",
          "type": "exit"
        }
      ],
      "type": "prompt"
    }
  ],
  "console_title_template": "{{if .Root}} \u26a1 {{end}}{{.Folder | replace \"~\" \"üè†\"}} @ {{.HostName}}",
  "osc99": true,
  "version": 3
}
